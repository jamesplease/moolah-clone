.btn
  display inline-block
  font-size 15px
  font-weight 500
  line-height 29px
  height 31px
  text-align center
  white-space nowrap
  vertical-align middle
  cursor pointer
  user-select none
  border 1px solid #c3c3c3
  border-radius 6px
  padding 0 13px
  color #888
  background-color #f3f3f3

  &:hover
    background-color #ebebeb

  &:active
    background-color #dfdfdf

  &.btn-line
    color #C7236C
    background-color transparent
    border-color #C7236C

    &:hover
      background-color #f9f9f9
      border-color #C7236C

    &:active
      background-color #eeeeee
      border-color #C7236C
