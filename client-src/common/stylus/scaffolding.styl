*
  box-sizing border-box

html, body
  margin 0
  padding 0

body
  // 45px is the size of the header
  // 50px is the size of the subheader
  padding-top 95px
  min-height 100vh

.container
  max-width $appWidth
  margin 0 auto
  padding 0 10px

  +respond-from($m-screen-min)
    padding 0 20px

.content-container
  display flex
  flex-direction column
  // 45px for the header + 50px for the subheader = 95px
  min-height: calc(100vh - 95px);

main
  padding-bottom 20px
  flex 1
