// This mixin is only used here, so we inline it.
base-text-input()
  border 1px solid #bbbbbb
  border-radius 6px
  box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.25)
  padding 0 10px
  width 100%

.text-input
  base-text-input()
  height 34px

.textarea-input
  base-text-input()
  padding 7px 10px

  // HTML5 validation isn't that great, but just in case I want to use
  // it, the style here supports it. In most cases I'll use `.invalid-input`
  // with JS validation.
  &:invalid,
  &.invalid-input
    placeholder-color(#f2afaf)
    border-color #cc9f9f
    background-color #fffafa
    box-shadow 0px 0px 4px 0px rgba(255, 97, 97, 0.30)

.form-row
  margin-bottom 20px
  display flex

  &:last-child
    margin 0

  > .btn
    margin-right 16px

    &:last-child
      margin-right 0

.form-error
  font-size 16px
  color #c71818
