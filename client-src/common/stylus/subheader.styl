.sub-header
  width 100%
  background-color #fff
  border-bottom 1px solid #eee

  > .container
    height 50px
    padding 0 10px
    display flex
    align-items center

    +respond-from($m-screen-min)
      padding 0 20px

  .subheader-title
    color #c7236c
    font-size 19px
    margin 0
    padding 0

  .subheader-action
    margin-left auto
