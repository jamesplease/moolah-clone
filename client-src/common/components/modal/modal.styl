body.noscroll
  overflow hidden

.modal-overlay
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 10000
  display block

.modal
  border-radius 6px
  background #fff
  min-width 255px
  min-height 50px
  max-width 85%
  padding 20px
  box-shadow 0 0 100px rgba(0, 0, 0, 0.25)
  margin 0 auto
  margin-top calc(50% - 40px)
