footer
  color #afafaf
  font-size 14px
  width 100%
  min-width 320px
  background-color #fafafa
  padding 12px 10px
  border-top 1px solid #e4e4e4
  display block

  +respond-from($m-screen-min)
    display flex
    padding-left 20px
    padding-right 20px

  .footer-copyright
    font-size 13px
    margin-bottom 5px

  .footer-nav
    +respond-from($m-screen-min)
      margin-left auto

  ul
    display flex

    li
      flex 0
      text-align center
      padding 0 10px

      &:first-child
        padding-left 0

      &:last-child
        padding-right 0

    a
      text-decoration none
      color #737373

      &:hover
        text-decoration underline
        color #6a6a6a
