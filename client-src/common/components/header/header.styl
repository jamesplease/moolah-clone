header
  position fixed
  height 46px
  width 100%
  padding 0 10px
  background-color #fafafa
  border-bottom 1px solid #eeeeee
  display flex
  align-items center

  +respond-from($m-screen-min)
    padding 0 20px

  a
    text-decoration none
    font-size 16px
    color #bababa

    &:hover
      color #999

  .app-logo
    display none
    margin 0
    margin-right 24px
    padding 0
    font-weight bold

    a
      font-size 21px
      primary-gradient-fill()

    +respond-from($m-screen-min)
      display block

  .mobile-menu-toggle
    primary-gradient-fill()

    +respond-from($m-screen-min)
      display none

  .header-main-menu
    display none

    +respond-from($m-screen-min)
      display block

  .header-main-menu-list
    display flex

    li
      margin-right 27px

      &:last-child
        margin 0

    a.active
      color #c7236c

  .header-profile-container
    margin-left auto

  .header-profile-link
    display flex
    align-items center

  .header-name
    margin-right 10px

  .header-profile-pic
    width 31px
    height 31px
    border-radius 50%
    border 2px solid #fff
    background-size cover
    background-image url('http://lh3.googleusercontent.com/-SFoxuA-9BgQ/AAAAAAAAAAI/AAAAAAAAAAA/ADhl2yoCgd6de7jfz57PsSkdK0WUHJH1IQ/s64-c-mo/photo.jpg')
